<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".meditationapp.MeditationSplashActivity">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_splash_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background_splash" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_meditation_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="280dp"
        android:transitionName="transition_logo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:tint="@color/white"
        android:src="@drawable/meditation_logo_2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_meditation"
        android:text="Meditation"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="40sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_below="@id/iv_meditation_logo"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>