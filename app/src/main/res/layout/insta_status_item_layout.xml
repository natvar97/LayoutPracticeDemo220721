<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:background="@android:color/transparent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_status_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@drawable/master_vijay" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_add_status"
        android:src="@drawable/icon_plus_blue"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_status_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_status_image"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:maxWidth="60dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center"
        android:text="Status Name"
        android:textColor="@color/white" />

</RelativeLayout>